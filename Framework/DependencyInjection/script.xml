<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Cicada\Core\Framework\Script\Execution\ScriptLoader">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Cicada\Core\Framework\App\Lifecycle\Persister\ScriptPersister"/>
            <argument type="service" id="cache.object"/>
            <argument>%twig.cache%</argument>
            <argument>%kernel.debug%</argument>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Cicada\Core\Framework\Script\Execution\ScriptExecutor" public="true">
            <argument type="service" id="Cicada\Core\Framework\Script\Execution\ScriptLoader"/>
            <argument type="service" id="Cicada\Core\Framework\Script\Debugging\ScriptTraces"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="twig.extension.trans"/>
            <argument>%kernel.cicada_version%</argument>
        </service>

        <service id="Cicada\Core\Framework\Script\ScriptDefinition">
            <tag name="cicada.entity.definition"/>
        </service>

        <service id="Cicada\Core\Framework\Script\Debugging\ScriptTraces">
            <tag name="data_collector"/>
            <tag name="kernel.reset" method="reset"/>
        </service>

        <service id="Cicada\Core\Framework\Script\Api\ScriptStoreApiRoute" public="true">
            <argument type="service" id="Cicada\Core\Framework\Script\Execution\ScriptExecutor"/>
            <argument type="service" id="Cicada\Core\Framework\Script\Api\ScriptResponseEncoder"/>
            <argument type="service" id="cache.object"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="Cicada\Core\Framework\Script\Api\ScriptApiRoute" public="true">
            <argument type="service" id="Cicada\Core\Framework\Script\Execution\ScriptExecutor"/>
            <argument type="service" id="Cicada\Core\Framework\Script\Execution\ScriptLoader"/>
            <argument type="service" id="Cicada\Core\Framework\Script\Api\ScriptResponseEncoder"/>
        </service>

        <service id="Cicada\Core\Framework\Script\Api\ScriptResponseFactoryFacadeHookFactory" public="true">
            <argument type="service" id="router"/>
            <argument type="service" id="Cicada\Storefront\Controller\ScriptController" on-invalid="null"/>
        </service>

        <service id="Cicada\Core\Framework\Script\Api\ScriptResponseEncoder">
            <argument type="service" id="Cicada\Core\System\SalesChannel\Api\StructEncoder"/>
        </service>
    </services>
</container>

