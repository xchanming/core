<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/xchanming/cicada/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Mailer settings</title>
        <title lang="zh-CN">邮件设置</title>

        <input-field type="single-select">
            <name>emailAgent</name>
            <options>
                <option>
                    <id>local</id>
                    <name>Local email agent</name>
                    <name lang="zh-CN">本地邮件代理</name>
                </option>
                <option>
                    <id>smtp</id>
                    <name>SMTP server</name>
                    <name lang="zh-CN">SMTP 服务器</name>
                </option>
            </options>
            <label>Authentication</label>
            <label lang="zh-CN">身份验证</label>
        </input-field>

        <input-field>
            <name>host</name>
            <label>Host</label>
            <label lang="zh-CN">主机</label>
            <placeholder>Fill in host name...</placeholder>
            <placeholder lang="zh-CN">填写主机名...</placeholder>
        </input-field>

        <input-field>
            <name>port</name>
            <label>Port</label>
            <label lang="zh-CN">端口</label>
            <placeholder>Fill in port number...</placeholder>
            <placeholder lang="zh-CN">填写端口号...</placeholder>
        </input-field>

        <input-field>
            <name>username</name>
            <label>Username</label>
            <label lang="zh-CN">用户名</label>
            <placeholder>Fill in username...</placeholder>
            <placeholder lang="zh-CN">输入用户名...</placeholder>
        </input-field>

        <input-field>
            <name>password</name>
            <label>Password</label>
            <label lang="zh-CN">密码</label>
            <placeholder>Fill in password...</placeholder>
            <placeholder lang="zh-CN">输入密码...</placeholder>
        </input-field>

        <input-field type="single-select">
            <name>encryption</name>
            <options>
                <option>
                    <id>none</id>
                    <name>No encryption</name>
                    <name lang="zh-CN">不加密</name>
                </option>
                <option>
                    <id>ssl</id>
                    <name>SSL encryption</name>
                    <name lang="zh-CN">SSL 加密</name>
                </option>
                <option>
                    <id>tsl</id>
                    <name>TLS encryption</name>
                    <name lang="zh-CN">TLS 加密</name>
                </option>
            </options>
            <label>Encryption</label>
            <label lang="zh-CN">加密</label>
        </input-field>

        <input-field type="single-select">
            <name>authenticationMethod</name>
            <options>
                <option>
                    <id>null</id>
                    <name>No authentication</name>
                    <name lang="zh-CN">无</name>
                </option>
                <option>
                    <id>plain</id>
                    <name>Plain authentication</name>
                    <name lang="zh-CN">明文</name>
                </option>
                <option>
                    <id>login</id>
                    <name>Login authentication</name>
                    <name lang="zh-CN">登录</name>
                </option>
                <option>
                    <id>cram-md5</id>
                    <name>Cram-MD5 authentication</name>
                    <name lang="zh-CN">Cram-MD5</name>
                </option>
            </options>
            <label>Authentication</label>
            <label lang="zh-CN">身份验证</label>
        </input-field>

        <input-field>
            <name>senderAddress</name>
            <label>Sender address</label>
            <label lang="zh-CN">发件人地址</label>
            <placeholder>Fill in a valid email address...</placeholder>
            <placeholder lang="zh-CN">输入有效邮箱地址...</placeholder>
        </input-field>

        <input-field>
            <name>deliveryAddress</name>
            <label>Delivery address</label>
            <label lang="zh-CN">收件人地址</label>
            <placeholder>Fill in a valid email address...</placeholder>
            <placeholder lang="zh-CN">输入有效邮箱地址...</placeholder>
        </input-field>

        <input-field type="bool">
            <name>disableDelivery</name>
            <label>Disable email delivery (temporarily)</label>
            <label lang="zh-CN">是否暂时禁用邮件发送</label>
        </input-field>
    </card>
</config>
